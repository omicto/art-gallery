extends layout

block content
  h1=title
  a(href='/transaction/new'): h4 + Register a new transaction
  table(id='table')
    thead
      th Date Acquired
      th Acquisition Price
      th Asking Price
      th Date Sold
      th Sales price
      th customerid
      th workid
      th Options
    each trans in transactions
      - var id = trans.transactionid
      tr 
        td #{trans.dateacquired}
        td #{trans.acquisitionprice}
        td #{trans.askingprice}
        td #{trans.datesold}
        td #{trans.salesprice}
        td #{trans.customerid}
        td #{trans.workid}
        td
          span(title='Delete' onclick=`deleteTransaction(${id})`): a(href='#') ‚ùå 
  
  script.
    $(document).ready( function () {
      $('#table').DataTable();
    });

    function deleteTransaction(id){
      $.ajax({
        url: "/api/transaction/" + id,
        method: 'DELETE'
      }).fail(function () {
        $('body').prepend('Eliminado');
      });
    }

