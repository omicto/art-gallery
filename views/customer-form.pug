extends layout

block content
  h1=(newCustomer? "Add" : "Edit") + " customer"

  - var customerInfo = !!(customer)? customer: {}
  form(id='customer-form')
    label(for="firstname") First Name
    input(type="text" name="firstname", value=customerInfo.firstname)
    label(for="lastname") Last Name
    input(type="text" name="lastname", value=customerInfo.lastname)
    label(for="emailaddress") Email Address
    input(type="text" name="emailaddress", value=customerInfo.emailaddress)
    label(for="street") Street
    input(type="text" name="street", value=customerInfo.street)
    label(for="city") City
    input(type="text" name="city", value=customerInfo.city)
    label(for="state") State
    input(type="text" name="state", value=customerInfo.state)
    label(for="ziporpostalcode") Zip Or Postal Code
    input(type="text" name="ziporpostalcode", value=customerInfo.ziporpostalcode)
    label(for="country") Country
    input(type="text" name="country", value=customerInfo.country)
    label(for="areacode") Areacode
    input(type="text" name="areacode", value=customerInfo.areacode)
    label(for="phonenumber") Phone Number
    input(type="text" name="phonenumber", value=customerInfo.phonenumber)
    button(type="submit") Submit

  - let url = newCustomer? '/api/customer/' : ('/api/customer/' + customerInfo.customerid);
  - let type = newCustomer? 'post' : 'put';
  script.
    $('#customer-form').on('submit', function(e){
      e.preventDefault();
      let form = $(this);

      $.ajax({
        type: '#{type}',
        url: '#{url}',
        data: form.serialize()
      });
    });